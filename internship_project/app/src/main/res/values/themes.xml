<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Internship1Month" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:fontFamily">@font/aller_regular</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="aller_bold_12_text" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:fontFamily">@font/aller_bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="aller_bold_14_text" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:fontFamily">@font/aller_bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="aller_bold_18_text" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/_18sdp</item>
        <item name="android:fontFamily">@font/aller_bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="aller_regular_16_edit" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="android:fontFamily">@font/aller_regular</item>
        <item name="android:background">@drawable/custom_border</item>
        <item name="android:padding">@dimen/_10sdp</item>
    </style>

    <style name="aller_bold_18_button" parent="Widget.AppCompat.Button">
        <item name="android:textSize">@dimen/_18sdp</item>
        <item name="android:fontFamily">@font/aller_bold</item>
        <item name="backgroundTint">@null</item>
        <item name="android:background">@drawable/custom_button</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="aller_bold_12_radio" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:buttonTint">@color/white</item>
        <item name="android:fontFamily">@font/aller_bold</item>
    </style>

</resources>